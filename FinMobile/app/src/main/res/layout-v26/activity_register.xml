<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Register"
    tools:visibility="visible">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="100dp"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription"
                android:layout_marginLeft="100dp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:text="@string/_1_group_details"
                android:textColor="@color/facetgold"
                android:textSize="30sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginTop="15dp"
                android:text="@string/group_type"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginTop="60dp"
                android:text="@string/group_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/enter_group_name"
                android:inputType="textPersonName"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_name"
                android:layout_marginTop="25dp"
                android:text="@string/number_of_numbers"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/number_of_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:autofillHints=""
                android:ems="10"
                android:inputType="number"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_of_members"
                android:layout_marginTop="25dp"
                android:text="@string/cycle_starting_date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic"

                />

            <EditText
                android:id="@+id/cycle_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:autofillHints=""
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cycle_start_date"
                android:layout_marginTop="30dp"
                android:text="@string/cycle_end_date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/cycle_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:autofillHints=""
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button3"
                android:textColor="@color/white"
                android:layout_below="@id/cycle_end_date"
                android:layout_height="wrap_content"
                android:text="@string/next" />

            <EditText
                android:id="@+id/group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/village_bank_chipelegano"
                android:layout_below="@id/textView2"
                android:inputType="text"
                android:autofillHints=""
                tools:targetApi="o"
                tools:ignore="LabelFor" />



        </RelativeLayout>


    </LinearLayout>


</ScrollView>


