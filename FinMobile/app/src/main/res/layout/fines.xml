<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/facetblue"
                android:text="@string/member_name"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/facetblue"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:textSize="20sp"
                android:text="Fine amount:"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/pay_month3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/facetblue"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:textSize="20sp"
                android:text="For month:"

                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/datepaid3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/facetblue"
                android:layout_marginTop="190dp"
                android:textSize="20sp"
                android:text="Date paid:"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/facetblue"
                android:layout_marginTop="240dp"
                android:textSize="20sp"
                android:text="Fine description:"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/paythrough3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/facetblue"
                android:textSize="20sp"
                android:layout_marginTop="290dp"
                android:text="@string/paid_through"
                />

            <EditText
                android:id="@+id/fine_amount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/amount3"
                android:layout_toRightOf="@id/amount3"
                android:layout_marginTop="100dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/mwk"

                tools:ignore="LabelFor"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/fine_month"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="140dp"
                android:layout_toEndOf="@+id/pay_month3"
                android:layout_toRightOf="@+id/pay_month3"
                android:ems="10"
                android:hint="@string/month"
                android:inputType="textPersonName"
                android:layout_marginStart="70dp"
                android:autofillHints="" />

            <EditText
                android:id="@+id/fine_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@id/datepaid3"
                android:layout_marginTop="180dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/date"
                android:inputType="date"
                android:layout_toEndOf="@id/datepaid3"
                android:layout_marginStart="70dp" />

            <EditText
                android:id="@+id/fine_description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/description"
                android:layout_marginTop="230dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="description"
                android:inputType="textPersonName"
                android:layout_toEndOf="@id/description"
                android:layout_marginStart="45dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/fine_mode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/paythrough3"
                android:layout_marginTop="280dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="mode"
                android:inputType="textPersonName"
                android:layout_toEndOf="@id/paythrough3"
                android:layout_marginStart="45dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/update4"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="70dp"
                android:text="@string/update"
                android:layout_marginStart="40dp" />

            <Button
                android:id="@+id/undo3"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/update4"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="400dp"
                android:text="@string/undo"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/update4" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>